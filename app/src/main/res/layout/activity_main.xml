<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="텍스트를 입력하시오"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/sub_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="서브텍스트1"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/edit_text"
        />

    <EditText
        android:id="@+id/sub_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="서브텍스트2"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/sub_text1"
        />

    <LinearLayout
        android:id="@+id/btn_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/sub_text2">

        <Button
            android:id="@+id/bt_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="데이터 추가"/>

        <Button
            android:id="@+id/bt_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="데이터 리셋"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_linear"

        tools:listitem="@layout/list_row_main" />


</androidx.constraintlayout.widget.ConstraintLayout>